<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    tools:context="tk11.jphacks.titech.view.fragment.BindingFragment">

    <tk11.jphacks.titech.controller.iconfont.CustomFontButton
        android:id="@+id/button_binding"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="16dp"
        android:background="@drawable/binding_button_background"
        android:gravity="center"
        android:text="&#xf0c1;"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        myapp:customFont="fontawesome.ttf"
        android:layout_marginLeft="16dp" />

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="46dp"
        android:paddingLeft="8dp"
        app:mtf_image="@drawable/adobe32"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/partner_id_text"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:background="@drawable/round_rect_background"
            android:gravity="center_vertical|left"
            android:hint="your partner's id"
            android:singleLine="true"
            android:textColor="@color/base_gray" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/partner_name_text"
        android:textColor="@color/base_white"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="150dp"
        android:text="玉城ティナ" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/example_img"
        app:riv_border_width="10dp"
        app:riv_border_color="@color/base_white"
        app:riv_mutate_background="true"
        app:riv_oval="true" />

</FrameLayout>
