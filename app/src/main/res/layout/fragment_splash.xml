<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk11.jphacks.titech.view.fragment.SplashFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <Button
        android:id="@+id/main_button_binding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_normal"
        android:layout_alignTop="@+id/main_rippleview_rect"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/title_activity_binding"
        android:textSize="18sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/main_button_calling"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_normal"
        android:layout_alignTop="@+id/main_rippleview_rect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/title_activity_calling"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
